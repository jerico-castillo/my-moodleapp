{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "cordova",
      "cordova-plugin-file-transfer",
      "node"
    ],
    "paths": {
      "@/*": ["*"],
      "@addon/*": ["app/addon/*"],
      "@app/*": ["app/*"],
      "@classes/*": ["app/classes/*"],
      "@components/*": ["app/components/*"],
      "@core/*": ["app/core/*"],
      "@directives/*": ["app/directives/*"],
      "@pipes/*": ["app/pipes/*"],
      "@services/*": ["app/services/*"],
      "@singletons/*": ["app/singletons/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/tests/**"
  ]
}
