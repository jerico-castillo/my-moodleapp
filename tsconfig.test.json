{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./out-tsc/tests",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@/*": ["*"],
      "@addon/*": ["app/addon/*"],
      "@app/*": ["app/*"],
      "@classes/*": ["app/classes/*"],
      "@components/*": ["app/components/*"],
      "@core/*": ["app/core/*"],
      "@directives/*": ["app/directives/*"],
      "@pipes/*": ["app/pipes/*"],
      "@services/*": ["app/services/*"],
      "@singletons/*": ["app/singletons/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "files": [
    "src/tests/setup.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.test.ts",
    "src/**/*.d.ts",
    "src/tests/**/*.ts"
  ]
}
